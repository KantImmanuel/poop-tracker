generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  passwordHash   String
  createdAt      DateTime        @default(now())
  meals          Meal[]
  poopLogs       PoopLog[]
  insightReport  InsightReport?
  refreshTokens     RefreshToken[]
  pushSubscriptions PushSubscription[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model InsightReport {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  report    String   // JSON string of the full analysis result
  updatedAt DateTime @updatedAt
}

model Meal {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  timestamp     DateTime @default(now())
  rawAiResponse String?  // JSON string of AI response
  foods         Food[]

  @@index([userId, timestamp])
}

model Food {
  id          String   @id @default(uuid())
  mealId      String
  meal        Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  name        String
  category    String?
  ingredients String?  // JSON array as string
  brand       String?
  restaurant  String?
  confidence  Float?
}

model PoopLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now())
  severity  String?  // Bristol scale: "1"-"7" (legacy: mild, moderate, severe)
  symptoms  String?  // JSON array: ["bloating", "cramps", "gas", "nausea", "urgency", "fatigue", "blood", "mucus"]

  @@index([userId, timestamp])
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  @@index([userId])
}
